#logo_fonda {
    background-image: url(<%= asset_path "fonda_blanco.png" %>);
    height: 300px;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

#fonda_mental {
    width: 60%;
    margin: auto;
    padding-top: 30px;
    padding-bottom: 60px;
    color: #d4d4d4;
    font-family: 'Work Sans', sans-serif;
    h1 {
        text-align: center;
    }
    p {
        width:100%;
        text-align:justify;
        margin:auto;
        font-size: 1.3em;
    }
    ul li {
        font-size: 1.3em;
    }
}

#imagen_fonda {
    background-image: url(<%= asset_path "sobrenosotros.jpg" %>);
    height: 200px;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

#imagen2 {
    background-image: url(<%= asset_path "sobre2.jpg" %>);
    height: 100%;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

